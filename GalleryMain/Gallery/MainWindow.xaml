    <Grid Margin="0,0,2,14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Left" Margin="487,40,0,0" VerticalAlignment="Top" Width="75" Click="LoadButton_Click" Grid.Column="1"/>
        <GroupBox Grid.Column="0" Margin="0,85,44,0" Grid.ColumnSpan="2">

